@page
@model RazorPagesMovieApp.Pages.Movies.DetailsModel

<h1>Details</h1>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Title</dt>
        <dd class = "col-sm-10">@Model.Movie.Title</dd>
        <dt class = "col-sm-2">Release Date</dt>
        <dd class = "col-sm-10">@Model.Movie.ReleaseDate</dd>
        <dt class = "col-sm-2">Genre</dt>
        <dd class = "col-sm-10">@Model.Movie.Genre</dd>
        <dt class = "col-sm-2">Price</dt>
        <dd class = "col-sm-10">@Model.Movie.Price</dd>
        <dt class = "col-sm-2">Rating</dt>
        <dd class = "col-sm-10">@Model.Movie.Rating</dd>
        <dt class = "col-sm-2">Poster</dt>
        <dd class = "col-sm-10">@Model.Movie.Poster</dd>
        <dt class = "col-sm-2">Director</dt>
        <dd class = "col-sm-10">@Model.Movie.Director</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
